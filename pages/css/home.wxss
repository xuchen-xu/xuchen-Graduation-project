.shortcut {
  width: 100%;
  height: 36px;
  background: slategray;
  border-bottom: solid 1px #ddd;
}
.shortcut .headerWrap {
  position: relative;
  width: 1000px;
  height: 100%;
  margin: 0 auto;
}
.shortcut .headerWrap .sloganBox {
  position: absolute;
  top: 0;
  left: 0;
  height: 36px;
  line-height: 36px;
  font-size: 12px;
  color: #fff;
}
.shortcut .headerWrap .sloganBox .text {
  margin-right: 4px;
}
.shortcut .userinfobox {
  position: absolute;
  top: 0;
  right: 0;
  height: 36px;
}
.shortcut .userinfobox .itemInfo {
  float: left;
  position: relative;
  height: 36px;
  padding: 0 12px;
}
.shortcut .userinfobox .itemInfo .infoNormal {
  display: block;
  line-height: 36px;
}
.shortcut .userinfobox .itemInfo .infoText {
  font-size: 12px;
  color: #fff;
  cursor: default;
}
.shortcut .userinfobox .itemInfo .infoLink {
  display: block;
  padding: 0 8px;
  line-height: 36px;
}
.shortcut .clearfix:before,
.shortcut .clearfix:after {
  content: " ";
  display: table;
}
.shortcut .clearfix:after {
  clear: both;
}
.shortcut .tubiao {
  margin-right: 3px;
}
